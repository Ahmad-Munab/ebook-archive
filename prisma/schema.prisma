generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                    String  @id @default(cuid())
  name                  String
  email                 String  @unique
  is_student            Boolean
  is_creator            Boolean
  is_admin              Boolean
  imageUrl              String  @db.Text
  is_premium            Boolean
  subscription_duration Int
  // Add relation to the course model to user model
}
